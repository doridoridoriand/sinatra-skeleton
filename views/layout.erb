<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= @title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="/css/application.css" rel="stylesheet">
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <header class="d-flex flex-wrap align-items-center justify-content-between py-3 mb-3 border-bottom">
            <div class="d-flex align-items-center gap-2">
              <span class="badge bg-dark text-uppercase">WebApp</span>
              <h2 class="h5 mb-0">Product Control Center</h2>
            </div>
            <div class="text-muted small">
              <span class="me-3">Active projects: <strong><%= settings.projects.size %></strong></span>
              <a class="link-secondary" href="/projects/new">Create project</a>
            </div>
          </header>
        </div>
      </div>
      <div class="row">
        <div class="col-2">
          <div class="list-group mb-4">
            <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" href="/">
              <span>Home</span>
              <span class="badge text-bg-light">/</span>
            </a>
            <a class="list-group-item list-group-item-action" href="/dashboard">Dashboard</a>
            <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" href="/projects">
              <span>Projects</span>
              <span class="badge text-bg-secondary"><%= settings.projects.size %></span>
            </a>
            <a class="list-group-item list-group-item-action" href="/projects/new">New project</a>
          </div>
          <div class="card">
            <div class="card-body">
              <p class="text-muted small mb-2">Shortcuts</p>
              <ul class="list-unstyled mb-0 small">
                <li class="mb-1"><a href="/projects?status=Planned" class="link-body-emphasis">Planned</a></li>
                <li class="mb-1"><a href="/projects?status=In%20Progress" class="link-body-emphasis">In progress</a></li>
                <li class="mb-1"><a href="/projects?status=Blocked" class="link-body-emphasis">Blocked</a></li>
                <li><a href="/projects?status=Done" class="link-body-emphasis">Done</a></li>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-10">
          <%= yield %>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <p>Footer</p>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
      (function () {
        'use strict';
        var forms = document.querySelectorAll('.needs-validation');
        Array.prototype.slice.call(forms).forEach(function (form) {
          form.addEventListener('submit', function (event) {
            if (!form.checkValidity()) {
              event.preventDefault();
              event.stopPropagation();
            }
            form.classList.add('was-validated');
          }, false);
        });
      })();
    </script>
  </body>
</html>
